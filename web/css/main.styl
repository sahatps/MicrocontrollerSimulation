p, h1, h2, h3, h4, select, label
    font-family Rubik
    color white

html
    min-height 100vh

body
    margin 0
    padding 0
    min-height 100vh
    position relative

header
    position absolute
    top 40
    height 40px
    width 100%
    background-color #30343F
    border-bottom 1px solid black


main
    box-sizing: border-box
    padding-top 40px;
    padding-bottom 20px;
    height 100vh
    overflow hidden
    display flex
    flex-direction row

.sideBar, .hackCable-sideBar
    background-color #30343F
    max-width 500px
    min-width 300px
    width 40%
    height 100%
    border-right 1px solid black
    padding 10px
    display flex
    flex-direction column
    overflow-y auto
    overflow-x visible
    transition width 0.3s ease, min-width 0.3s ease
    position relative

    .toggle-sidebar
        border none
        border-radius 5px
        padding 6px 10px
        cursor pointer
        transition all 0.2s
        font-size 14px
        background-color white
        color black
        min-width 40px
        min-height 32px
        display flex
        align-items center
        justify-content center
        position absolute
        top 10px
        left 10px
        z-index 100

        &:hover
            background-color #e0e0e0

        .toggle-icon
            font-size 12px
            font-weight bold
            transition transform 0.2s

        &.sidebar-hidden
            position fixed
            background-color #30343F
            color white
            border 1px solid black
            left 10px
            top 50px

            &:hover
                background-color #3a3e4a

            .toggle-icon
                transform rotateY(180deg)

    &.hidden
        width 0
        min-width 0
        max-width 0
        padding 0
        border-right none
        overflow hidden

    .hackCable-catalog-actions
        display flex
        flex-direction row
        margin-bottom 10px
        gap 10px
        flex-wrap wrap
        line-height 0
        align-items center

        select
            border none
            border-radius 5px
            padding 6px 12px
            background-color white
            color black
            cursor pointer
            font-size 14px
            min-width 150px
            flex 1

            option
                color black

    .hackCable-toggle-sidebar
        border none
        border-radius 5px
        padding 6px 10px
        cursor pointer
        transition all 0.2s
        font-size 14px
        background-color white
        color black
        min-width 40px
        min-height 32px
        display flex
        align-items center
        justify-content center
        position absolute
        top 10px
        left 10px
        z-index 100

        &:hover
            background-color #e0e0e0

        .toggle-icon
            font-size 12px
            font-weight bold
            transition transform 0.2s

        &.sidebar-hidden
            background-color #30343F
            color white
            border 1px solid black
            left 0
            top 50px

            &:hover
                background-color #3a3e4a

            .toggle-icon
                transform rotateY(180deg)

        .buttonBar
            display flex
            flex-direction row
            margin-bottom 10px
            gap 10px
            flex-wrap wrap
            line-height 0
            align-items center

            p
                margin 0
                white-space nowrap

            button
                border none
                border-radius 5px
                padding 6px 12px
                cursor pointer
                transition background-color 0.2s
                font-size 14px

                &:hover
                    background-color #e0e0e0

            select
                border none
                border-radius 5px
                padding 6px 12px
                background-color white
                color black
                cursor pointer
                font-size 14px
                min-width 150px

                option
                    color black

        .status-message
            padding 8px 12px
            margin-top 10px
            margin-bottom 10px
            border-radius 5px
            font-size 14px
            font-weight 500
            text-align center
            transition all 0.3s ease

            &.status-info
                background-color #2196F3
                color white

            &.status-success
                background-color #4CAF50
                color white

            &.status-error
                background-color #f44336
                color white

        label
            display block
            margin-top 10px
            margin-bottom 5px
            font-size 14px

        textarea
            border none
            border-radius 5px
            width 100%
            resize vertical
            min-height 150px
            padding 8px
            font-family monospace
            font-size 13px
            box-sizing border-box

    #hackCable
        flex 1
        overflow auto
        background-color #f5f5f5

footer
    position absolute
    bottom 0
    height 20px
    width 100%
    background-color #30343F
    border-top 1px solid black

// Responsive design for tablets
@media screen and (max-width: 1024px)
    main
        .sideBar
            width 50%
            min-width 280px

            .buttonBar
                button
                    padding 5px 10px
                    font-size 13px

            textarea
                min-height 120px
                font-size 12px

// Responsive design for mobile devices
@media screen and (max-width: 768px)
    main
        flex-direction column

        .sideBar
            width 100%
            max-width 100%
            min-width 100%
            height auto
            max-height 50vh
            border-right none
            border-bottom 1px solid black

            .buttonBar
                gap 5px

                p
                    font-size 13px

                button
                    padding 5px 8px
                    font-size 12px
                    flex 1
                    min-width 60px

                select
                    font-size 12px
                    min-width 100px
                    padding 5px 8px

            label
                font-size 13px
                margin-top 8px

            textarea
                min-height 100px
                font-size 12px

        #hackCable
            height 50vh
            overflow auto

// Responsive design for small mobile devices
@media screen and (max-width: 480px)
    header
        height 35px

    main
        padding-top 35px

        .sideBar
            padding 8px

            .buttonBar
                gap 4px
                flex-direction column
                align-items stretch

                p
                    font-size 12px
                    margin-bottom 4px

                button
                    padding 6px 8px
                    font-size 11px
                    width 100%

                select
                    font-size 11px
                    padding 6px 8px
                    width 100%

            label
                font-size 12px

            textarea
                min-height 80px
                font-size 11px
                padding 6px
