
.hackCable-root
  height 100%
  width 100%
  display flex
  flex-direction column
  flex-wrap nowrap

  p, h1, h2, h3, h4, select
    font-family Rubik
    color #c9c9c9

  h3
    font-weight 400
    font-size .9em
    text-align center
    word-wrap break-word

  .hackCable-header
    height 50px
    width 100%
    background-color #30343F
    border-bottom 1px solid black
    display flex
    align-items center
    padding-left 10px
    flex-shrink 0
    position relative

  .hackCable-content-wrapper
    display flex
    flex-direction row
    flex 1
    overflow hidden

  .hackCable-sideBar
    height 100%
    width 250px
    background-color #424B5A
    display flex
    flex-direction column
    flex-shrink 0
    transition width 0.3s ease, min-width 0.3s ease, padding 0.3s ease
    position relative

    &.hidden
      width 0
      min-width 0
      padding 0
      border-right none
      overflow hidden

    .hackCable-catalog-actions
      width 100%
      background #30343F
      text-align center

      select
        margin 5px
        padding 3px
        width 80%
        max-width 150px
        background-color #f5f5f5
        border-radius 3px
        border none
        color black

        option
          color black
          background-color white

    .hackCable-catalog-list
      overflow-y scroll
      overflow-x hidden
      height 100%
      width 100%
      padding 5px 5px 0 5px
      box-sizing border-box
      scrollbar-width thin

      .hackCable-catalog-element
        text-align center
        display block
        overflow hidden
        border-radius 5px
        background #30343F
        padding 10px
        margin-bottom 5px
        h3
          margin 0 0 10px 0

  .hackCable-toggle-sidebar
    border none
    border-radius 5px
    padding 8px 12px
    cursor pointer
    transition all 0.2s
    font-size 14px
    background-color white
    color black
    min-width 40px
    min-height 36px
    display flex
    align-items center
    justify-content center
    flex-shrink 0

    &:hover
      background-color #e0e0e0

    .toggle-icon
      font-size 14px
      font-weight bold
      transition transform 0.2s

    &.sidebar-hidden
      .toggle-icon
        transform rotateY(180deg)

  .hackCable-editor
    background-color white
    width 100%
    flex 1
    overflow auto
    scrollbar-width thin
    position relative

    #hackCable-canvas
      width 100%
      min-width 800px
      height 100%
      min-height 600px
      position relative

      .hackCable-canvas-overlay-container
        height 100%
        width 100%
        position absolute
        overflow hidden
        transform-origin left top

        background-color rgba(0, 0, 0, 0)
        background-position 0 0, 0 0
        background-repeat repeat, repeat
        background-attachment scroll, scroll
        background-image linear-gradient(to right, rgb(240, 240, 240) 1px, transparent 1px), linear-gradient(rgb(240, 240, 240) 1px, rgb(255, 255, 255) 1px)
        background-clip border-box, border-box
        background-size 20px 20px

        *
          position absolute
          transform-origin left top

    // Canvas Toolbar styles
    .hackCable-canvas-toolbar
      position absolute
      top 10px
      left 10px
      z-index 1000
      display flex
      flex-direction column
      gap 5px

      .hackCable-toolbar-bin
        width 40px
        height 40px
        background-color rgba(200, 200, 200, 0.8)
        border-radius 8px
        display flex
        align-items center
        justify-content center
        cursor default
        transition all 0.2s ease
        opacity 0.5
        pointer-events none

        svg
          color #666
          transition color 0.2s ease

        &.active
          opacity 1
          pointer-events auto
          background-color rgba(255, 100, 100, 0.3)
          border 2px dashed #ff6666

        &.hover
          background-color rgba(255, 50, 50, 0.6)
          border 2px solid #ff0000
          transform scale(1.1)

          svg
            color #fff

      .hackCable-toolbar-btn
        width 36px
        height 36px
        background-color rgba(255, 255, 255, 0.9)
        border 1px solid #ccc
        border-radius 6px
        display flex
        align-items center
        justify-content center
        cursor pointer
        transition all 0.2s ease

        svg
          color #424B5A

        &:hover:not(:disabled)
          background-color #e0e0e0
          border-color #999

        &:disabled
          opacity 0.4
          cursor not-allowed

        &:active:not(:disabled)
          transform scale(0.95)

// Responsive canvas styles for tablets
@media screen and (max-width: 1024px)
  .hackCable-root
    .hackCable-sideBar
      width 200px

    .hackCable-editor
      #hackCable-canvas
        min-width 600px
        min-height 500px

// Responsive canvas styles for mobile devices
@media screen and (max-width: 768px)
  .hackCable-root
    .hackCable-content-wrapper
      flex-direction column

    .hackCable-sideBar
      width 100%
      height auto
      max-height 40vh
      border-right none
      border-bottom 1px solid #333

      .hackCable-catalog-actions
        select
          font-size 14px

      .hackCable-catalog-list
        .hackCable-catalog-element
          padding 8px
          h3
            font-size 0.85em

    .hackCable-editor
      height 60vh
      min-height 300px

      #hackCable-canvas
        min-width 500px
        min-height 400px

// Responsive canvas styles for small mobile devices
@media screen and (max-width: 480px)
  .hackCable-root
    .hackCable-sideBar
      max-height 35vh

      .hackCable-catalog-list
        .hackCable-catalog-element
          padding 6px
          h3
            font-size 0.8em

    .hackCable-editor
      height 65vh

      #hackCable-canvas
        min-width 400px
        min-height 300px



