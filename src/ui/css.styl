
.hackCable-root
  height 100%
  width 100%
  display flex
  flex-wrap nowrap

  p, h1, h2, h3, h4, select
    font-family Rubik
    color #c9c9c9

  h3
    font-weight 400
    font-size .9em
    text-align center
    word-wrap break-word

  .hackCable-sideBar
    height 100%
    width 250px
    background-color #424B5A
    display flex
    flex-direction column
    flex-shrink 0

    .hackCable-catalog-actions
      width 100%
      background #30343F
      text-align center

      select
        margin 5px
        padding 3px
        width 80%
        max-width 150px
        background-color #22242c
        border-radius 3px
        border none
        color white

    .hackCable-catalog-list
      overflow-y scroll
      overflow-x hidden
      height 100%
      width 100%
      padding 5px 5px 0 5px
      box-sizing border-box
      scrollbar-width thin

      .hackCable-catalog-element
        text-align center
        display block
        overflow hidden
        border-radius 5px
        background #30343F
        padding 10px
        margin-bottom 5px
        h3
          margin 0 0 10px 0

  .hackCable-editor
    background-color white
    width 100%
    flex 1
    overflow auto
    scrollbar-width thin
    position relative

    #hackCable-canvas
      width 100%
      min-width 800px
      height 100%
      min-height 600px
      position relative

      .hackCable-canvas-overlay-container
        height 100%
        width 100%
        position absolute
        overflow hidden
        transform-origin left top

        background-color rgba(0, 0, 0, 0)
        background-position 0 0, 0 0
        background-repeat repeat, repeat
        background-attachment scroll, scroll
        background-image linear-gradient(to right, rgb(240, 240, 240) 1px, transparent 1px), linear-gradient(rgb(240, 240, 240) 1px, rgb(255, 255, 255) 1px)
        background-clip border-box, border-box
        background-size 20px 20px

        *
          position absolute
          transform-origin left top

// Responsive canvas styles for tablets
@media screen and (max-width: 1024px)
  .hackCable-root
    .hackCable-sideBar
      width 200px

    .hackCable-editor
      #hackCable-canvas
        min-width 600px
        min-height 500px

// Responsive canvas styles for mobile devices
@media screen and (max-width: 768px)
  .hackCable-root
    flex-direction column

    .hackCable-sideBar
      width 100%
      height auto
      max-height 40vh
      border-right none
      border-bottom 1px solid #333

      .hackCable-catalog-actions
        select
          font-size 14px

      .hackCable-catalog-list
        .hackCable-catalog-element
          padding 8px
          h3
            font-size 0.85em

    .hackCable-editor
      height 60vh
      min-height 300px

      #hackCable-canvas
        min-width 500px
        min-height 400px

// Responsive canvas styles for small mobile devices
@media screen and (max-width: 480px)
  .hackCable-root
    .hackCable-sideBar
      max-height 35vh

      .hackCable-catalog-list
        .hackCable-catalog-element
          padding 6px
          h3
            font-size 0.8em

    .hackCable-editor
      height 65vh

      #hackCable-canvas
        min-width 400px
        min-height 300px



